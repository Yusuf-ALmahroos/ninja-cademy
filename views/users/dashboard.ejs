<%- include('../partials/header.ejs') %>

<style>
  h1.page-title {
    text-align: center;
    font-size: 32px;
    color: #333;
    margin-bottom: 25px;
    border-bottom: 2px solid #a3b18a;
    padding-bottom: 10px;
  }

  .dashboard-wrapper {
    max-width: 900px;
    margin: 40px auto;
    padding: 20px;
  }

  .auth-actions {
    text-align: center;
    margin-bottom: 30px;
  }

  form {
    background-color: #f5f5f5;
    padding: 20px;
    border-left: 5px solid #a3b18a;
    border-radius: 10px;
    margin-bottom: 30px;
  }

  .course-item {
    margin-bottom: 15px;
  }

  .course-item label {
    font-weight: bold;
    margin-right: 10px;
    color: #1d3557;
  }

  button {
    margin-top: 10px;
    padding: 8px 16px;
    background-color: #a3b18a;
    border: none;
    border-radius: 6px;
    font-weight: bold;
    color: white;
    cursor: pointer;
  }

  button:hover {
    background-color: #588157;
  }

  .user-section {
    margin: 30px 0;
    padding: 20px;
    background-color: #ffffff;
    border-left: 5px solid #a3b18a;
    border-radius: 10px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }

  .user-section h3 {
    font-size: 20px;
    color: #344e41;
    margin-bottom: 15px;
  }

  ul {
    list-style-type: none;
    padding-left: 0;
  }

  li {
    margin-bottom: 8px;
  }

  .course-link {
    color: #588157;
    font-weight: 600;
    text-decoration: none;
  }

  .course-link:hover {
    color: #344e41;
    text-decoration: underline;
  }
</style>

<div class="dashboard-wrapper">
  <h1 class="page-title">Course Enrollment Dashboard</h1>

  <div class="auth-actions">
    | <a href="/auth/<%= user._id %>/update-password">Update password</a> |
  </div>

  <form action="enroll" method="post">
    <% course.courses.forEach((item, idx) => { %>
      <div class="course-item">
        <label for="course<%= idx %>"><%= item.title %></label>
        <input type="checkbox" id="course<%= idx %>" name="courses" value="<%= item.title %>">
      </div>
    <% }) %>
    <button type="submit">Add</button>
  </form>

  <section class="user-section">
    <h3>ðŸŽ“ Enrolled Courses</h3>
    <ul>
      <% user.coursesEnrolled.forEach((course) => { %>
        <li><a href="/courses/<%= course %>" class="course-link"><%= course %></a></li>
      <% }) %>
    </ul>
  </section>

  <section class="user-section">
    <h3>âœ… Completed Lessons</h3>
    <% if (user.completedLessons && user.completedLessons.length > 0) { %>
      <ul>
        <% user.completedLessons.forEach((lesson) => { %>
          <li><%= lesson.title %></li>
        <% }) %>
      </ul>
    <% } else { %>
      <p>No completed lessons</p>
    <% } %>
  </section>
</div>

<%- include('../partials/footer.ejs') %>
